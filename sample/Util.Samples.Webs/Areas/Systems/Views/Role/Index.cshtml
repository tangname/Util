@model RoleDto

<util-toolbar>
    <util-layout>
        <util-textbox model="queryParam.keyword" placeholder="搜索" on-change="search()"></util-textbox>
    </util-layout>
    <util-layout>
        <util-a styles="Icon" tooltip="添加角色" link="create">
            <util-icon font-awesome-icon="Plus"></util-icon>
        </util-a>
        <util-button styles="Icon" tooltip="批量删除" on-click="delete()">
            <util-icon material-icon="Delete"></util-icon>
        </util-button>
        <util-button styles="Icon" tooltip="刷新" on-click="refresh()">
            <util-icon material-icon="Sync"></util-icon>
        </util-button>
    </util-layout>
</util-toolbar>

<util-tree-table id="treeTable_role" key="role" base-url="role" query-param="queryParam" selection-mode="SingleLeafOnly">
    <util-tree-table-column for="Code"></util-tree-table-column>
    <util-tree-table-column for="Name"></util-tree-table-column>
    <util-tree-table-column for="Comment"></util-tree-table-column>
    <util-tree-table-column title="操作">
        <util-button styles="Icon" tooltip="删除" on-click="delete(row.data.id)">
            <util-icon material-icon="Delete"></util-icon>
        </util-button>
    </util-tree-table-column>
</util-tree-table>
